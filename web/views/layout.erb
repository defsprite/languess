<!-- Delete everything in this .container and get started on your own site! -->

<div class="container">
  <div class="sixteen columns">
    <h1 class="remove-bottom" style="margin-top: 40px">Language Guess</h1>
    <h5>Version 0.1</h5>
    <hr/>
  </div>
  <div class="one-third column">
    <h3>What is this?</h3>

    <p>Just enter a GitHub user name on the righ hand side and this small application will answer with the best guess
      for the user's favourite programming language based on their public repositories.</p>
  </div>

  <div class="one-third column">
    <h3>OK, let's go</h3>

    <form action="/languess" method="post">
      <label for="regularInput">Github Username</label>
      <input type="text" id="regularInput" name="username">
      <button type="submit">Get Result</button>
    </form>
  </div>

  <div class="one-third column">
    <%= yield %>
  </div>

</div>
